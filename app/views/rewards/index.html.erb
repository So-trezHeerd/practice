<p id="notice"><%= notice %></p>

<h1>리워드 선택</h1>

<table>
  <thead>
    <tr>
      <th>Reward</th>
      <th>Product</th>
      <th>Reward name</th>
      <th>Reward content</th>
      <th>Reward price</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.reward_id %></td>
        <td><%= reward.product_id %></td>
        <td><%= reward.reward_name %></td>
        <td><%= reward.reward_content %></td>
        <td><%= reward.reward_price %></td>
        <td><%= reward.order_id %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

